{
  "manifest_version": 3,
  "name": "Trust Assembly",
  "version": "0.1.0",
  "description": "Alerts you of limbic hijacking via transformed media headlines",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["http://i8kww8kk00oogcg0cc88kkkc.5.78.111.152.sslip.io:8001/*"],
  "background": {
    "scripts": ["dist/src/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["dist/src/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/src/*.js.map"],
      "matches": ["<all_urls>"]
    }
  ]
}
